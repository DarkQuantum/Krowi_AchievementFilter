<Ui>
	<ContainedAlertFrame name="KrowiAF_EventAlertFrame_Template" parent="UIParent" hidden="true" frameStrata="DIALOG" virtual="true" inherits="AlertFrameTemplate">
		<Size x="256" y="84"/>
		<Anchors>
			<Anchor point="BOTTOM" x="0" y="0"/>
		</Anchors>
		<Animations>
			<AnimationGroup parentKey="animIn">
				<Alpha fromAlpha="1" toAlpha="0" duration="0" order="1"/>
				<Alpha fromAlpha="0" toAlpha="1" duration="0.2" order="2"/>
			</AnimationGroup>
			<AnimationGroup parentKey="waitAndAnimOut">
				<Alpha startDelay="4.05" fromAlpha="1" toAlpha="0" duration="1.5" parentKey="animOut">
				<Scripts>
					<OnFinished>
						self:GetRegionParent():Hide();
					</OnFinished>
				</Scripts>
				</Alpha>
			</AnimationGroup>
		</Animations>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="Background" file="Interface\AddOns\Krowi_AchievementFilter\Media\AlertFrame">
					<Size x="256" y="84"/>
					<Anchors>
						<Anchor point="LEFT" x="0" y="0"/>
					</Anchors>
					<TexCoords left="0" right="1" top="0" bottom="0.65625"/>
				</Texture>
				<FontString parentKey="Name" inherits="GameFontHighlight" maxLines="1" justifyV="TOP" justifyH="CENTER">
					<Size x="160" y="0"/>
					<Anchors>
						<Anchor point="TOP" x="27" y="-18"/>
					</Anchors>
				</FontString>
				<FontString parentKey="Unlocked" inherits="GameFontBlack" maxLines="2" justifyV="TOP" justifyH="CENTER">
					<Size x="160" y="0"/>
					<Anchors>
						<Anchor point="CENTER" x="27" y="-7"/> <!-- -18 looks better with my ElvUI, depends on font? -->
					</Anchors>
				</FontString>
			</Layer>
			<Layer level="OVERLAY">
				<Texture atlas="ui-achievement-alert-background-mini-glow" useAtlasSize="true" alphaMode="ADD" hidden="true" parentKey="glow">
					<Anchors>
						<Anchor point="CENTER" x="0" y="0"/>
					</Anchors>
					<Animations>
						<AnimationGroup parentKey="animIn">
							<Alpha fromAlpha="0" toAlpha="1" duration="0.2" order="1"/>
							<Alpha fromAlpha="1" toAlpha="0" duration="0.5" order="2"/>
							<Scripts>
								<OnFinished>
									self:GetParent():Hide();
								</OnFinished>
							</Scripts>
						</AnimationGroup>
					</Animations>
				</Texture>
				<Texture atlas="ui-achievement-alert-background-mini-glow-shine"  useAtlasSize="true" alphaMode="ADD" hidden="true" parentKey="shine">
					<Anchors>
						<Anchor point="TOPLEFT" x="0" y="0"/>
					</Anchors>
					<Animations>
						<AnimationGroup parentKey="animIn">
							<Alpha fromAlpha="0" toAlpha="1" duration="0.2" order="1"/>
							<Translation offsetX="210" offsetY="0" duration="0.85" order="2"/>
							<Alpha startDelay="0.35" fromAlpha="1" toAlpha="0" duration="0.5" order="2"/>
							<Scripts>
								<OnFinished>
									self:GetParent():Hide();
								</OnFinished>
							</Scripts>
						</AnimationGroup>
					</Animations>
				</Texture>
			</Layer>
		</Layers>
		<Frames>
			<Frame parentKey="Icon">
				<Size x="116" y="116"/>
				<Anchors>
					<Anchor point="LEFT" x="-18" y="-1"/>
				</Anchors>
				<Layers>
					<Layer level="BORDER">
						<Texture parentKey="Bling" atlas="ui-achievement-bling" useAtlasSize="true" hidden="true">
							<Anchors>
								<Anchor point="CENTER" x="-1" y="1"/>
							</Anchors>
						</Texture>
					</Layer>
					<Layer level="ARTWORK">
						<Texture parentKey="Texture">
							<Anchors>
								<Anchor point="CENTER" x="0" y="3"/>
							</Anchors>
							<Size x="50" y="50"/>
						</Texture>
					</Layer>
					<Layer level="OVERLAY">
						<Texture parentKey="Overlay" atlas="ui-achievement-iconframe" useAtlasSize="true">
							<Anchors>
								<Anchor point="CENTER" x="-1" y="2"/>
							</Anchors>
						</Texture>
					</Layer>
				</Layers>
			</Frame>
		</Frames>
		<Scripts>
			<OnLoad function="KrowiAF_EventAlertFrame_OnLoad"/>
			<OnClick function="KrowiAF_EventAlertFrame_OnClick"/>
			<OnUpdate function="KrowiAF_EventAlertFrame_OnUpdate"/>
		</Scripts>
	</ContainedAlertFrame>
	
